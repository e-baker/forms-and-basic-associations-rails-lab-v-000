<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.text_field :artist_name, list: "artists_autocomplete" %>
     <datalist id="artists_autocomplete">
          <%= Artist.all.each do |artist| %>
               <option value="<%= artist.name %>">
          <% end %>
     </datalist></p>

  <p><%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <input name='song[note_contents][]' id='song_note_contents_1'>
    <input name='song[note_contents][]' id='song_note_contents_2'>
    <input name='song[note_contents][]' id='song_note_contents_3'>
  <%= f.submit %>
<% end %>


